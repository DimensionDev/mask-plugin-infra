{
    "title": "Manifest",
    "type": "object",
    "additionalProperties": true,
    "required": ["manifest_version", "id", "entries"],
    "properties": {
        "manifest_version": {
            "type": "number",
            "enum": [1]
        },
        "id": {
            "type": "string"
        },
        "entries": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 1,
            "properties": {
                "rpc": { "type": "string" },
                "rpcGenerator": { "type": "string" },
                "background": { "type": "string" },
                "content_script": { "type": "string" },
                "popup": { "type": "string" },
                "dashboard": { "type": "string" }
            }
        },
        "contributes": {
            "type": "object",
            "description": "Functionalities this plugin supports.",
            "properties": {
                "backup": {
                    "type": "boolean",
                    "description": "This plugin will join the backup process to backup its own data. To use `registerBackupHandler` exported from '@masknet/plugin/worker', this property must be set to true."
                }
            }
        }
    }
}
