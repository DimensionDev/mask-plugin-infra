{
    "title": "Manifest",
    "type": "object",
    "additionalProperties": true,
    "required": ["manifest_version", "name", "entries"],
    "properties": {
        "manifest_version": {
            "type": "number",
            "enum": [1]
        },
        "name": {
            "type": "string"
        },
        "entries": {
            "$ref": "#/$defs/entries"
        }
    },

    "$defs": {
        "entries": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 1,
            "properties": {
                "rpc": { "type": "string" },
                "rpcGenerator": { "type": "string" },
                "background": { "type": "string" },
                "content_script": { "type": "string" },
                "popup": { "type": "string" },
                "dashboard": { "type": "string" }
            }
        }
    }
}
